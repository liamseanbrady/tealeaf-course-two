<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br/>
    <% end %>
    <span id="post_<%= post.id %>_vote"><%= post.total_votes %></span> votes  
    <!-- TODO: come up with algorithm to in some way obfuscate the ids of posts here. No point in slugging if leaving in here -->
    <% if logged_in? %>
      <br/>
      <%= link_to vote_post_path(post, vote: false), method: 'post', remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, post_path(post) %></h4>
    <p><%= post.description %></p>
    <br/>
    <span class="quiet">Posted by</span> <%= link_to post.creator.username, user_path(post.creator) %> at
    <small><%= display_datetime(post.created_at) %></small>
    <br/>
    <br/>
    <small><%= link_to "#{post.comments.size} comments", post_path(post) %></small>
  </div>
</div>