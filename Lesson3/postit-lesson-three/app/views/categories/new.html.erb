<%= render 'shared/content_header', title: 'New Category' %>

<div class="row">
  <div class="well span8">
    <%= form_for @category do |f| %>
      <%= render 'shared/errors', obj: @category %>
      <div class="control-group">
        <%= f.label :name, 'Pick a Category Name' %>
        <%= f.text_field :name %>
        <br/>
      </div>
      <%= f.submit 'Create Category', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>