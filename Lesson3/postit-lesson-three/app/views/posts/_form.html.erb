<div class="well">
  <%= form_for @post do |f| %>
    <%= render 'shared/errors', obj: @post %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <br/>
    </div>
    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
      <br/>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5, class: 'span3' %>
      <br/>
    </div>
    <div class="control-group">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cl| %>
        <%= cl.label(class: 'inline checkbox') {cl.check_box(class: 'checkbox inline') + cl.text } %>
      <% end %>
    </div>
    <br/>
    <%= f.submit (@post.new_record? ? 'Create Post' : 'Update Post'), class: 'btn btn-success' %>
  <% end %>
</div>